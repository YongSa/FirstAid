<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/taskOverview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/taskMaterial"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/colorBackground"
            app:srcCompat="@drawable/bandage" />

        <TextView
            android:id="@+id/textViewHighscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Highscore"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textMaterial1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Material 1"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/taskTraffic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/colorBackground"
            app:srcCompat="@drawable/car" />

        <TextView
            android:id="@+id/textTraffic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="Verkehr"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>